                    <!--<arguments>-->
                        <!--<argument>install</argument>-->
                    <!--</arguments>-->
                    <!--<workingDirectory>${basedir}</workingDirectory>-->
                <!--</configuration>-->
            <!--</plugin>-->
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>elife</id>
            <name>elife libraries</name>
            <url>file://${local.repo.path}/../libraries</url>
        </repository>
    </repositories>

</project>
